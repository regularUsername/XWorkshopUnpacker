<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minWidth="500.0" onDragDropped="#onDragDropped" onDragOver="#onDragOver" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.xworkshopunpackgui.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox spacing="10.0">
      <children>
         <TextField fx:id="inputField" editable="false" prefWidth="400.0" promptText="Inputfile" HBox.hgrow="ALWAYS" />
         <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onBrowseInputClick" prefWidth="70.0" text="Browse" />
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </HBox>
   <HBox spacing="10.0">
      <children>
         <TextField fx:id="outputField" prefWidth="400.0" promptText="Output Path" HBox.hgrow="ALWAYS" />
         <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onBrowseOutputClick" prefWidth="70.0" text="Browse" />
      </children>
   </HBox>
   <ListView fx:id="fileList" disable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
   <HBox alignment="CENTER" spacing="20.0">
      <children>
         <Button fx:id="unpackBtn" disable="true" mnemonicParsing="false" onAction="#onUnpackClick" prefWidth="70.0" text="Unpack" HBox.hgrow="NEVER">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Button>
         <Label fx:id="somethingLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Select Inputfile" HBox.hgrow="ALWAYS">
            <font>
               <Font size="14.0" />
            </font>
            <opaqueInsets>
               <Insets />
            </opaqueInsets></Label>
         <ProgressIndicator fx:id="progressIndicator" minWidth="40.0" prefHeight="40.0" prefWidth="40.0" visible="false" HBox.hgrow="NEVER" />
      </children>
   </HBox>
</VBox>
